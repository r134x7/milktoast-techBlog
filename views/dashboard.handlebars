{{!-- need to display all posts from user, when click on new post, change to new page to do post --}}

<button class="btn new-post">
    <a href="/newpost"> + New Post </a>
</button>

<br>

{{#each posts as |post| }}
<div class="box">
  <div class="head">
    <h4>
      <a href="/post/edit/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>{{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}

<script src="./js/dashboard.js"></script>
