{{!-- need to display all posts from user, when click on new post, change to new page to do post --}}

<div class="box">
  <div class="head">
    <h4>
      <p>{{post.title}}</p>
    </h2>
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="content">
      <p>
      {{post.content}}
    </p>
  </div>
</div>

<br>

<div class="box">
  <div class="head">
    <h2>Edit Post</h2>
  </div>
    <form class="form post-form" data-id="{{post.id}}">
      <div class="form-group">
        <label>Title:</label>
        <input class="form-input" type="text" id="post-title" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <label>Content:</label>
        <input class="form-input" type="text" id="post-content" value="{{post.content}}" />
      </div>
      <div class="form-group">
        <button class="btn" style="font-weight: bold; background-color: skyblue;" type="submit">Edit Post</button>
      </div>
    </form>
    <div class="test"></div>
        <button class="btn delete-list" style="font-weight: bold; background-color: crimson;" data-id="{{post.id}}">Delete Post</button>
    </div>
</div>

<script src="../../js/editpost.js"></script>
